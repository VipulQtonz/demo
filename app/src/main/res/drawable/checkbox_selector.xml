<!-- res/drawable/checkbox_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the checkbox is checked -->
    <item android:state_checked="true" android:drawable="@drawable/checkbox_check_svg" />

    <!-- State when the checkbox is unchecked -->
    <item android:drawable="@drawable/checkbox_svg" />
</selector>
