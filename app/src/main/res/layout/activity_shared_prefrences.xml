<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SharedPrefrencesMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".sharedPrefrences.ActivitySharedPrefrences">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFirstName"
            style="@style/textLabelBMI"
            android:text="@string/first_name"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edtFirstName"
            style="@style/editTextBMI"
            android:autofillHints=""
            android:hint="@string/enter_your_first_name"
            android:inputType="textEmailAddress"
            tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/tvLastName"
            style="@style/textLabelBMI"
            android:text="@string/last_name"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edtLastName"
            style="@style/editTextBMI"
            android:autofillHints=""
            android:hint="@string/enter_your_last_name"
            android:inputType="textEmailSubject"
            tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/tvEmail"
            style="@style/textLabelBMI"
            android:text="@string/email" />

        <EditText
            android:id="@+id/edtEmail"
            style="@style/editTextBMI"
            android:autofillHints=""
            android:hint="@string/enter_valid_email_address"
            android:inputType="textEmailAddress"
            tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,VisualLintTextFieldSize" />


        <TextView
            android:id="@+id/tvMobileNumber"
            style="@style/textLabelBMI"
            android:text="@string/mobile_number" />

        <EditText
            android:id="@+id/edtMobileNumber"
            style="@style/editTextBMI"
            android:autofillHints=""
            android:hint="@string/enter_mobile_number"
            android:inputType="number"
            android:maxLength="10"
            tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,VisualLintTextFieldSize" />


        <TextView
            android:id="@+id/tvAddress"
            style="@style/textLabelBMI"
            android:text="@string/address" />

        <EditText
            android:id="@+id/edtAddress"
            style="@style/editTextBMI"
            android:autofillHints=""
            android:hint="@string/enter_your_address"
            android:inputType="textMultiLine"
            android:lines="3"
            tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,VisualLintTextFieldSize" />

        <Button
            android:id="@+id/btnSendData"
            style="@style/btnBMI"
            android:text="@string/send_data"
            android:textAllCaps="false"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/tvShowPrev"
            style="@style/textLabelBMI"
            android:gravity="center"
            android:text="@string/click_here_if_you_want_to_show_previous_data" />

        <LinearLayout
            android:id="@+id/llFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="@string/_first_name"
                android:textColor="@color/waterWhiteOne"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tvFirstNamePrev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:text="@string/first_name"
                android:textColor="@color/blackOne"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="@string/_last_name"
                android:textColor="@color/waterWhiteOne"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tvLastNamePrev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:text="@string/last_name"
                android:textColor="@color/blackOne"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="@string/_email"
                android:textColor="@color/waterWhiteOne"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tvEmailPrev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:text="@string/email"
                android:textColor="@color/blackOne"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="@string/mobile_no"
                android:textColor="@color/waterWhiteOne"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tvMobileNumberPrev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:text="@string/email"
                android:textColor="@color/blackOne"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="@string/_address"
                android:textColor="@color/waterWhiteOne"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tvAddressPrev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:text="@string/email"
                android:textColor="@color/blackOne"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>