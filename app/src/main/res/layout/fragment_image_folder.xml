<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_image" />

    <ImageView
        android:id="@+id/imgNotFound"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:contentDescription="@string/app_not_found"
        android:src="@drawable/no_data_found"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/tvNotFoundText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNotFoundText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_image_found"
        android:textSize="@dimen/sp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgNotFound" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupNotFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tvNotFoundText,imgNotFound" />

</androidx.constraintlayout.widget.ConstraintLayout>